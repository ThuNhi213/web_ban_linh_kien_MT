@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<!--breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang Chủ</a></li>
            <li class="active">Quên mật khẩu</li>
        </ol>
    </div>
</div>
<!--//breadcrumbs-->
<!--login-->
<div class="login-page">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
        <h3 class="title">Lấy lại mật khẩu</h3>
    </div>
    <div class="widget-shadow">
        <div class="login-body wow fadeInUp animated" data-wow-delay=".7s">
            @using (Html.BeginForm("ForgetPasswordConfirm", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    <input type="text" class="user" name="Email" placeholder="Nhập địa chỉ email của bạn..." required>
                </div>

                <span class="label label-danger">@ViewBag.Message</span>

                <div class="form-group">
                    <input type="submit" value="Nhấn để lấy link thay đổi mật khẩu" class="btn btn-primary">
                </div>
            }
        </div>
    </div>
</div>
<!--//login-->
